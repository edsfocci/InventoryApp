<h3>Inner containers</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @container.inner_containers.each do |inner_container| %>
      <tr>
        <td><%= inner_container.name %></td>
        <td><%= link_to 'Show', inner_container %></td>
        <td><%= link_to 'Edit', edit_container_path(inner_container) %></td>
        <td><%= link_to 'Destroy', inner_container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Container', new_container_path(host_container_id: @container.id) %>
